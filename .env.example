# Database Configuration
# 数据库密码
DB_PASSWORD=postgres
# DATABASE_TYPE 可选值: postgresql, mysql, sqlite

# DATABASE_TYPE=sqlite
# DATABASE_URL=sqlite:////data/sql_app.db

# 如果使用 MySQL，取消注释并填写你的连接信息
# DATABASE_TYPE=mysql
# DATABASE_URL=mysql+pymysql://user:${DB_PASSWORD}@host:port/dbname

DATABASE_TYPE=postgresql
# DATABASE_URL=postgresql://postgres:${DB_PASSWORD}@postgres:5432/gemini_poise
DATABASE_URL=postgresql://user:${DB_PASSWORD}@host:port/dbname

POOL_SIZE=20
MAX_OVERFLOW=50
POOL_TIMEOUT=30
POOL_RECYCLE=3600
POOL_PRE_PING=true

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=60

# API Configuration
GEMINI_PURE_PROXY_PREFIX=/v1beta
OPENAI_PROXY_PREFIX=/v1

# Performance Configuration
MAX_REQUEST_SIZE=10485760  # 10MB in bytes
REQUEST_TIMEOUT=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_ROTATION=true
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5